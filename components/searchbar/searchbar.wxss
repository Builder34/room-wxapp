.search-view{
  position: fixed; 
  z-index: 100;
  width: 100%;
  box-shadow: 0 0 10rpx 10rpx #f2f2f2;
  border-radius: 10rpx;
  color: #6a6662;
}
.search-bar{
  padding: 3px 5px;
  height: 44px;
  margin-top: 2px;
}
.search-bar view{
  display: inline-block !important;
  margin: auto;
  vertical-align: middle;
}
.search-bar-input {
  border: 1px solid #d0d0d0;  
  border-radius: 14rpx;
  height: 36px; 
  width: 78%;
  margin-left: 10rpx !important;
  margin-right: 10rpx !important;
}
.search-bar-input icon {
  vertical-align: middle;
  margin: 15rpx 20rpx;
}
.search-bar-input input {
  display: inline-block;
  vertical-align: middle;
  width: 83%;
  height: 22px;
}
.header-icon{
  font-size: 40rpx;
  vertical-align: middle;
  text-shadow: 2px 1px #f6d048;
}

.search-condition {
  display: flex;
  justify-content: space-around;
  height: 56rpx;
  margin-bottom: 4rpx;
  flex-wrap: nowrap;
  font-size: 32rpx;
}
.search-condition-item{
  width: 160rpx;
  text-align: center;
}
.search-condition .active image {
  transform: rotate(180deg);
  background: none;
}
.search-condition-item text{
  vertical-align: middle;
  font-size: 28rpx;
  line-height: 28rpx;
}
.search-condition-item image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.search-condition-layout {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 88px;
  z-index: 100;
  border-bottom: solid 1px #eee;
  height: 100%;
  background-color: rgba(000,000,000,.5);
}
.search-condition-layout view {
  width: 750rpx;
  text-indent: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #e7e7e7;
  background-color:#ffffff; 
}
.search-condition-layout .active{
  color: #f6d048;
}
.item-active{
  color: #f6d048;
}